<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerSignUp">
   <top>
      <Label text=" " BorderPane.alignment="CENTER" />
   </top>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Eventy" />
            <TextField fx:id="usernameTextField" promptText="Username" />
            <TextField fx:id="passwordTextField" promptText="Password" />
            <TextField fx:id="confirmTextField" promptText="Confirm Password" />
            <Button mnemonicParsing="false" onAction="#onSignUpButtonClick" text="Sign Up" />
            <Label text="or" />
            <Label text="Create a new account on Evently" />
            <Label onMouseClicked="#onLoginButtonClick" text="Login" />
            <Label fx:id="errorLabel" text=" " />
         </children>
      </VBox>
   </left>
</BorderPane>
